# House heating
climate:
# House AC
  - platform: generic_thermostat
    name: House
    heater: switch.thermostat_ac
    target_sensor: sensor.thermostat_temperature
    min_temp: 40
    max_temp: 90
    ac_mode: true
    target_temp: 79
    cold_tolerance: 0.3
    hot_tolerance: 0.3
    min_cycle_duration:
      minutes: 10
    keep_alive:
      minutes: 3
    initial_hvac_mode: "cool"
    away_temp: 85
    precision: 1.0

# Office fan
  - platform: generic_thermostat
    name: Office
    heater: switch.office_thermostat_switch
    target_temp: 78
    target_sensor: sensor.office_temperature
#    initial_operation_mode: auto
    cold_tolerance: 2
    hot_tolerance: -2
    ac_mode: true

